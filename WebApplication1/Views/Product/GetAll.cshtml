@model List<WebApplication1.Models.Entity.Product>

@{
    ViewData["Title"] = "GetAll";
}

<h1>GetAll</h1>

<div>
    <h4>Products</h4>
    <hr />
    @if(Model is not null){
        foreach(var item in Model)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    Name
                </dt>
                <dd class="col-sm-10">
                    @item.Name
                </dd>
                <dt class="col-sm-2">
                    Price
                </dt>
                <dd class="col-sm-10">
                    @item.Price
                </dd>
                <dt class="col-sm-2">
                    Category
                </dt>
                <dd class="col-sm-10">
                    @item.CategoryId
                </dd>
                <dt class="col-sm-2">
                    Created At
                </dt>
                <dd class="col-sm-10">
                    @item.CreatedAt
                </dd>
            </dl>
        }
    }
</div>
